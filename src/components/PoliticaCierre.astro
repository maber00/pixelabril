---
import { getLanguageFromUrl, t, setCurrentLanguage } from "../i18n/utils/translator";

const currentLang = getLanguageFromUrl(Astro.url.pathname);
setCurrentLanguage(currentLang);
---

<!-- Bloque PolÃ­tica -->
<div class="mt-16 text-center max-w-3xl mx-auto">

  <span class="inline-block text-pixel-blue font-semibold text-sm uppercase tracking-wider mb-2">
    {t('politica_cierre.badge')}
  </span>

  <h2 class="text-3xl md:text-5xl font-normal mb-4 text-gray-900">
    {t('politica_cierre.title')}
  </h2>

  <a 
    href="/privacidad"
    class="text-sm md:text-base text-pixel-blue hover:underline"
  >
    {t('politica_cierre.link_text')}
  </a>
</div>

<!-- CTA -->
<div class="mt-12 text-center max-w-3xl mx-auto">

  <h2 class="text-3xl md:text-4xl font-normal mb-4 text-gray-900">
    {t('politica_cierre.cta_title')}
  </h2>

  <p class="text-lg text-gray-600 mb-10">
    {t('politica_cierre.cta_description')}
  </p>

  <div class="flex flex-col sm:flex-row justify-center gap-4 mb-10">

    <a
      href="#reservas"
      class="btn bg-pixel-blue hover:bg-blue-700 text-white text-lg px-8 py-4 rounded-lg inline-flex items-center justify-center transition"
    >
      {t('politica_cierre.cta_button_short')}
    </a>

    <a
      href="#reservas"
      class="btn border-2 border-pixel-blue text-pixel-blue hover:bg-pixel-blue hover:text-white text-lg px-8 py-4 rounded-lg inline-flex items-center justify-center transition"
    >
      {t('politica_cierre.cta_button_coliving')}
    </a>

  </div>
</div>
