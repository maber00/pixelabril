---
// src/components/Faq.astro
import { getLanguageFromUrl, t, setCurrentLanguage } from '../i18n/utils/translator';

const currentLang = getLanguageFromUrl(Astro.url.pathname);
setCurrentLanguage(currentLang);

const faqs = [
  {
    questionKey: 'faq.questions.q1.question',
    answerKey: 'faq.questions.q1.answer'
  },
  {
    questionKey: 'faq.questions.q2.question',
    answerKey: 'faq.questions.q2.answer'
  },
  {
    questionKey: 'faq.questions.q3.question',
    answerKey: 'faq.questions.q3.answer'
  },
  {
    questionKey: 'faq.questions.q4.question',
    answerKey: 'faq.questions.q4.answer'
  }
];
---

<section
  id="faq"
  class="section bg-white"
>
  <div class="container mx-auto px-4 md:px-20">
    {/* Encabezado */}
    <div class="text-center mb-10 md:mb-14">
      <span class="inline-block text-pixel-brown font-semibold text-xs md:text-sm uppercase tracking-[0.2em] mb-3">
        {t('faq.badge')}
      </span>
      <h2 class="text-3xl md:text-5xl font-normal text-gray-900">
        {t('faq.title')}
        <span class="text-pixel-brown"> {t('faq.title_highlight')}</span>
      </h2>
    </div>

    {/* Lista de preguntas */}
    <div class="max-w-3xl mx-auto space-y-4">
      {faqs.map((item) => (
        <div class="border border-gray-200 rounded-2xl p-4 md:p-5 bg-white shadow-sm">
          <p class="text-sm md:text-base font-semibold text-gray-900 mb-2">
            {t(item.questionKey)}
          </p>
          <p class="text-sm md:text-base text-gray-700">
            {t(item.answerKey)}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
