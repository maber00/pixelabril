---
// Ubicacion.astro 

import { getLanguageFromUrl, t, setCurrentLanguage } from '../i18n/utils/translator';

const currentLang = getLanguageFromUrl(Astro.url.pathname);
setCurrentLanguage(currentLang);

import pixelLogo from '../assets/logo-pixel.svg';
---

<section id="ubicacion" class="section bg-pixel-blue/5">
  <div class="container mx-0 md:mx-20">
    
    {/* ENCABEZADO */}
    <div class="text-center mb-12">
      <span class="inline-block text-pixel-blue font-semibold text-sm uppercase tracking-wider mb-2">
        {t('ubicacion.badge')}
      </span>

      <h2 class="text-4xl md:text-6xl font-normal mb-6">
        {t('ubicacion.title')} <span class="text-pixel-blue">{t('ubicacion.title_highlight')}</span>
      </h2>

      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {t('ubicacion.description')}
      </p>
    </div>

    {/* GRID 2 COLUMNAS */}
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        {/* COLUMNA IZQUIERDA: MOVILIDAD + ZONA EMPRESARIAL + SERVICIOS */}
        <div class="space-y-8">
          
          {/* MOVILIDAD */}
          <div class="bg-gray-50 p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-bold mb-4 flex items-center">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <img 
                  src="/images/movilidad.svg" 
                  alt="Movilidad Pixel Living" 
                  class="w-8 h-8" 
                />
              </div>
              {t('ubicacion.movilidad.titulo')}
            </h3>

            <p class="text-gray-700 mb-4">
