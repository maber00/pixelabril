  color: string;
  imagen: string;
  descripcion: string;
  metros: string;
  precio: PrecioEstudio;   // üëà usar el mismo tipo
}

interface LightboxEstudio {
  nombre: string;
  imagenPrincipal: string;
  imagenes: string[];
  color: string;
}

interface LightboxData {
  [key: string]: LightboxEstudio;
}

