---

<section id="coliving" class="section bg-pixel-purple/5">
  <div class="container mx-0 md:mx-20">
    <div class="text-center mb-12">
      <span class="inline-block text-pixel-purple font-semibold text-sm uppercase tracking-wider mb-2">{t('coliving.badge')}</span>
      <h2 class="text-4xl md:text-7xl font-normal mb-6">{t('coliving.title')} <span class="text-pixel-purple">{t('coliving.title_highlight')}</span> {t('coliving.title_end')}</h2>
    </div>
    
    <!-- Contenedor de dos columnas: texto y carrusel -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-7xl mx-auto mb-16">
      <!-- Columna de texto -->
      <div class="flex flex-col justify-center">
        <div class="text-left mb-12">
          <h2 class="text-4xl md:text-5xl font-normal mb-6">
            <p>{t('coliving.community.heading')}</p>
          </h2>
        </div>
        <div class="text-lg space-y-4">
          <p>{t('coliving.community.description1')}</p>
          <p>{t('coliving.community.description2')}</p>
        </div>
        
        <div class="mt-8">
          <a href="#reservas" class="btn bg-pixel-purple hover:bg-purple-700 text-white inline-flex items-center">
            {t('coliving.community.cta')}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Columna del carrusel -->
      <div class="flex flex-col">
        <!-- Contenedor de imágenes con aspecto cuadrado -->
        <div class="relative overflow-hidden rounded-lg border-2 border-pixel-purple">
          <!-- Imágenes del carrusel estilo rollo fotográfico -->
          <div id="coliving-carousel" class="flex transition-transform duration-500">
            {carouselImages.map((image) => (
              <div class="w-full flex-shrink-0">
                <div class="aspect-square">
                  <img 
                    src={image.src} 
                    alt={image.alt} 
                    class="w-full h-full object-cover"
                  />
                </div>
              </div>
            ))}
          </div>
          
          <!-- Indicadores dentro de la imagen -->
          <div class="absolute bottom-4 left-0 right-0 flex justify-center space-x-2">
            {carouselImages.map((_, index) => (
              <button 
                class="w-2 h-2 rounded-full bg-white opacity-50 hover:opacity-100 transition-opacity coliving-indicator" 
                data-index={index}
                aria-label={t('coliving.carousel.indicator_label').replace('{{index}}', (index + 1).toString())}
              ></button>
            ))}
          </div>
        </div>
        
       <!-- Controles del carrusel DEBAJO de las imágenes -->
        <div class="flex justify-center items-center space-x-4 mt-4">
          <button 
            id="coliving-prev" 
            class="bg-pixel-purple text-white p-2 rounded-md hover:bg-purple-700 transition focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
            aria-label={t('coliving.carousel.prev_label')}
            title={t('coliving.carousel.prev_title')}
          >
            <span class="sr-only">{t('coliving.carousel.prev_sr')}</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
            </svg>
          </button>

          <button 
            id="coliving-next" 
            class="bg-pixel-purple text-white p-2 rounded-md hover:bg-purple-700 transition focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
            aria-label={t('coliving.carousel.next_label')}
            title={t('coliving.carousel.next_title')}
          >
            <span class="sr-only">{t('coliving.carousel.next_sr')}</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
            </svg>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Sección de beneficios -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 max-w-7xl mx-auto">
      {beneficios.map(beneficio => (
        <div class="bg-pixel-purple p-6 rounded-md shadow-md hover:shadow-lg transition-shadow border-2 border-pixel-purple pixel-hover">
          <div class="w-14 h-14 bg-pixel-purple/20 rounded-md flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-white">
              <path stroke-linecap="round" stroke-linejoin="round" d={beneficio.icono} />
            </svg>
          </div>
          
          <h3 class="text-xl text-violet-50 font-semibold mb-2">{beneficio.titulo}</h3>
          <p class="text-white">{beneficio.descripcion}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Elementos del carrusel
    const carousel = document.getElementById('coliving-carousel');
    const prevBtn = document.getElementById('coliving-prev');
    const nextBtn = document.getElementById('coliving-next');
    const indicators = document.querySelectorAll('.coliving-indicator');
    
    // Número total de imágenes
    const totalImages = indicators.length;
    
    // Índice actual
    let currentIndex = 0;
    
    // Función para actualizar el carrusel
    function updateCarousel() {
      if (carousel) {
        // Calculamos el desplazamiento
        carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
      }
      
      // Actualizar indicadores
      indicators.forEach((indicator, index) => {
        if (index === currentIndex) {
          indicator.classList.add('opacity-100');
          indicator.classList.remove('opacity-50');
        } else {
          indicator.classList.add('opacity-50');
          indicator.classList.remove('opacity-100');
        }
      });
    }
    
    // Event listeners para los botones
    prevBtn?.addEventListener('click', () => {
      currentIndex = (currentIndex - 1 + totalImages) % totalImages;
      updateCarousel();
    });
    
    nextBtn?.addEventListener('click', () => {
      currentIndex = (currentIndex + 1) % totalImages;
      updateCarousel();
    });
    
    // Event listeners para los indicadores
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        currentIndex = index;
        updateCarousel();
      });
    });
    
    // Inicializar
    updateCarousel();
    
    // Auto-reproducción del carrusel (opcional)
    const interval = setInterval(() => {
      currentIndex = (currentIndex + 1) % totalImages;
      updateCarousel();
    }, 5000);
    
    // Detener auto-reproducción al pasar el mouse por encima
    carousel?.addEventListener('mouseenter', () => {
      clearInterval(interval);
    });
  });
</script>