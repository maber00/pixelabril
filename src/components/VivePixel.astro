  .pixel-accordion-header {
    padding: 24px;
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.3s ease;
    border-radius: 10px;
  }
  
  .pixel-accordion-header:hover {
