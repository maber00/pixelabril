<style>
  /* ===== ACORDEÓN CSS PURO - 100% ESTABLE ===== */
  
  .pixel-accordion {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 2px solid #f3f4f6;
    transition: all 0.3s ease;
  }
  
  .pixel-accordion:hover {
    border-color: var(--color-pixel-orange);
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
  }
  
  .pixel-accordion[open] {
    border-color: var(--color-pixel-orange);
    box-shadow: 0 10px 25px -3px rgba(255, 153, 51, 0.1);
  }
  
  .pixel-accordion-header {
    padding: 24px;
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.3s ease;
    border-radius: 10px;
  }
  
  .pixel-accordion-header:hover {
    background-color: #fef3e2;
  }
  
  .pixel-accordion[open] .pixel-accordion-header {
    background-color: #fff7ed;
    border-bottom: 2px solid #fed7aa;
  }
  
  /* Quitar el triángulo por defecto del navegador */
  .pixel-accordion-header::-webkit-details-marker {
    display: none;
  }
  
  /* Crear nuestro propio indicador */
  .pixel-accordion-header::after {
    content: '▶';
    font-size: 18px;
    color: var(--color-pixel-orange);
    transition: transform 0.3s ease;
    flex-shrink: 0;
    margin-left: 16px;
  }
  
  .pixel-accordion[open] .pixel-accordion-header::after {
    transform: rotate(90deg);
  }
  
  .pixel-accordion-content {
    padding: 0 24px 24px 24px;
    animation: slideDown 0.3s ease-out;
  }
  
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive */
  
  
  /* Colores Pixel Variables CSS */
  :root {
    --color-pixel-yellow: #FFCC33;
    --color-pixel-orange: #FF9933;
    --color-pixel-blue: #004099;
    --color-pixel-purple: #9966CC;
    --color-pixel-brown: #009185;
    --color-pixel-green: #33CC66;
  }
  
  /* Utilidades de color */
  .bg-pixel-orange { background-color: var(--color-pixel-orange); }
  .bg-pixel-blue { background-color: var(--color-pixel-blue); }
  .bg-pixel-purple { background-color: var(--color-pixel-purple); }
  .bg-pixel-green { background-color: var(--color-pixel-green); }
  .bg-pixel-yellow { background-color: var(--color-pixel-yellow); }
  .bg-pixel-brown { background-color: var(--color-pixel-brown); }
  
  .text-pixel-orange { color: var(--color-pixel-orange); }
  .text-pixel-brown { color: var(--color-pixel-brown); }
  
  .border-pixel-orange { border-color: var(--color-pixel-orange); }
  .border-pixel-blue { border-color: var(--color-pixel-blue); }
  .border-pixel-purple { border-color: var(--color-pixel-purple); }
  .border-pixel-green { border-color: var(--color-pixel-green); }
  .border-pixel-brown { border-color: var(--color-pixel-brown); }
  .border-pixel-yellow { border-color: var(--color-pixel-yellow); }
</style>