---
// Este componente es un modal/lightbox reutilizable para mostrar galería de imágenes
// Se debe colocar en src/components/LightboxModal.astro

interface Props {
  id?: string;               // ID para el modal
  showDetailsButton?: boolean; // Mostrar botón de detalles
  showReservaButton?: boolean; // Mostrar botón de reserva
  detailsPath?: string;      // Ruta base para detalles (ej: "/estudio/")
  reservaPath?: string;      // Ruta para reservas (ej: "#reservas")
}

const { 
  id = "lightboxModal", 
  showDetailsButton = true,
  showReservaButton = true,
  detailsPath = "/estudio/",
  reservaPath = "#reservas"
} = Astro.props;
---

<!-- Galería modal/lightbox -->
<div id={id} class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden items-center justify-center lightbox-modal">
  <div class="w-full max-w-5xl px-4 py-8">
    <!-- Controles superiores -->
    <div class="flex justify-between items-center mb-4 text-white">
      <h3 class="text-xl font-medium lightbox-title">Galería de imágenes</h3>
      <button class="p-2 hover:bg-gray-800 rounded-full lightbox-close">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <!-- Imagen principal -->
    <div class="relative">
      <div class="bg-gray-900 flex items-center justify-center rounded-lg overflow-hidden">
        <img class="max-h-[70vh] max-w-full object-contain lightbox-image" src="" alt="Imagen en galería" />
      </div>
      
      <!-- Botones de navegación -->
      <button class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 p-2 rounded-full text-white hover:bg-opacity-70 lightbox-prev">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
        </svg>
      </button>
      
      <button class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 p-2 rounded-full text-white hover:bg-opacity-70 lightbox-next">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
        </svg>
      </button>
    </div>
    
    <!-- Miniaturas -->
    <div class="mt-4 flex space-x-2 overflow-x-auto">
      <div class="flex space-x-2 lightbox-thumbnails">
        <!-- Se llenarán dinámicamente con JavaScript -->
      </div>
    </div>
    
    <!-- Contador de imágenes -->
    <div class="mt-3 text-center text-white lightbox-counter">
      <span class="lightbox-current">1</span> / <span class="lightbox-total">1</span>
    </div>
    
    <!-- Enlace a detalles y reserva -->
    <div class="mt-6 flex justify-center gap-4">
      {showDetailsButton && (
        <a href="#" class="py-2 px-6 bg-pixel-blue hover:bg-blue-600 text-white rounded-md flex items-center group lightbox-details-link">
          Ver detalles completos
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      )}
      
      {showReservaButton && (
        <a href={reservaPath} class="py-2 px-6 bg-pixel-blue hover:bg-blue-600 text-white rounded-md flex items-center group lightbox-reserva-link">
          Reservar ahora
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 9v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z" />
          </svg>
        </a>
      )}
    </div>
  </div>
</div>