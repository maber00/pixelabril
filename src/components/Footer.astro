          <li><a href={localizeUrl('/#ubicacion', currentLang)} class="text-gray-400 hover:text-white transition-colors">{t('footer.quick_links.location')}</a></li>
          <li><a href={localizeUrl('/contacto', currentLang)} class="text-gray-400 hover:text-white transition-colors">{t('footer.quick_links.contact')}</a></li>
        </ul>
      </div>
      
      <div>
