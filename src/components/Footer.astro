       <div class="flex space-x-6">
          <!-- ‚úÖ ENLACES CORREGIDOS CON localizeUrl() -->
          <a href={localizeUrl('/privacidad', currentLang)} class="text-gray-400 hover:text-white text-sm transition-colors">{t('footer.bottom_links.privacy')}</a>
          <a href={localizeUrl('/terminos', currentLang)} class="text-gray-400 hover:text-white text-sm transition-colors">{t('footer.bottom_links.terms')}</a>
          <a href={localizeUrl('/cookies', currentLang)} class="text-gray-400 hover:text-white text-sm transition-colors">{t('footer.bottom_links.cookies')}</a>
