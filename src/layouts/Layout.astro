---
// src/layouts/Layout.astro - CODIFICACI√ìN UTF-8 CORREGIDA
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

// IMPORTAR I18N
import { getLanguageFromUrl, t, setCurrentLanguage, getAlternateUrls } from '../i18n/utils/translator';

export interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
	canonical?: string;
	noindex?: boolean;
	structuredData?: object;
}

// Detectar idioma desde URL
const currentLang = getLanguageFromUrl(Astro.url.pathname);
setCurrentLanguage(currentLang);

// Generar URLs alternativas para hreflang
const alternateUrls = getAlternateUrls(Astro.url.pathname);

const { 
	title = t('meta.title'),
	description = t('meta.description'),
	ogImage = "/images/pixel-living-og.jpg",
	canonical,
	noindex = false,
	structuredData = null
} = Astro.props;

const pathname = Astro.url.pathname;
const siteUrl = "https://pixelliving.co";
const canonicalUrl = canonical || `${siteUrl}${pathname}`;

// Structured data adaptado por idioma
const defaultStructuredData = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "Organization",
			"@id": `${siteUrl}/#organization`,
			"name": "Pixel Living",
			"url": siteUrl,
			"logo": {
				"@type": "ImageObject",
				"@id": `${siteUrl}/#logo`,
				"url": `${siteUrl}/images/logo-pixel-living.webp`,
				"width": 300,
				"height": 100
			},
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+57-301-787-2595",
				"contactType": "customer service",
				"availableLanguage": currentLang === 'es' ? ["Spanish", "English"] : ["English", "Spanish"]
			},
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "Bogot√°",
				"addressCountry": "CO"
			},
			"sameAs": [
				"https://instagram.com/pixelliving.co"
			]
		},
		{
			"@type": "WebSite",
			"@id": `${siteUrl}/#website`,
			"url": siteUrl,
			"name": "Pixel Living",
			"description": description,
			"publisher": {
				"@id": `${siteUrl}/#organization`
			},
			"inLanguage": currentLang,
			"potentialAction": [
				{
					"@type": "SearchAction",
					"target": {
						"@type": "EntryPoint",
						"urlTemplate": `${siteUrl}/buscar?q={search_term_string}`
					},
					"query-input": "required name=search_term_string"
				}
			]
		},
		{
			"@type": "Service",
			"@id": `${siteUrl}/#service`,
			"name": currentLang === 'es' ? "Coliving Pixel Living" : "Pixel Living Coliving",
			"description": currentLang === 'es' 
				? "Servicio de coliving premium en Bogot√° con apartaestudios completamente amoblados"
				: "Premium coliving service in Bogot√° with fully furnished studios",
			"provider": {
				"@id": `${siteUrl}/#organization`
			},
			"areaServed": {
				"@type": "City",
				"name": "Bogot√°"
			},
			"serviceType": "Coliving",
			"category": "Accommodation"
		}
	]
};

const finalStructuredData = structuredData || defaultStructuredData;
---

<!DOCTYPE html>
<html lang={currentLang} dir="ltr">
	<head>
		<!-- üö® CHARSET DEBE SER LO PRIMERO -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		
		<!-- üìä Google Tag Manager -->
		<script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
		new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
		j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
		'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
		})(window,document,'script','dataLayer','GTM-KMNCWPVB');</script>
		<!-- End Google Tag Manager -->
		
		<!-- üìä Google Analytics 4 -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-G1041RMX9Z"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-G1041RMX9Z');
		</script>
		
		<!-- üöÄ PRECONNECT HINTS CR√çTICOS -->
		<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin />
		<link rel="preconnect" href="https://www.googletagmanager.com" crossorigin />
		
		<!-- üåê DNS PREFETCH para recursos secundarios -->
		<link rel="dns-prefetch" href="https://maps.googleapis.com" />
		<link rel="dns-prefetch" href="https://formsubmit.co" />
		<link rel="dns-prefetch" href="https://wa.me" />
		<link rel="dns-prefetch" href="https://api.ipgeolocation.io" />
		<link rel="dns-prefetch" href="https://www.google-analytics.com" />
		
		<!-- üì± Favicon y iconos -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="theme-color" content="#009185" />
		<meta name="msapplication-TileColor" content="#009185" />
		
		<!-- üìã Meta tags b√°sicos -->
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Pixel Living" />
		<meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"} />
		
		<!-- üîó Canonical URL -->
		<link rel="canonical" href={canonicalUrl} />
		
		<!-- üåç HREFLANG TAGS para SEO multiidioma -->
		<link rel="alternate" hreflang="es" href={`${siteUrl}${alternateUrls.es}`} />
		<link rel="alternate" hreflang="en" href={`${siteUrl}${alternateUrls.en}`} />
		<link rel="alternate" hreflang="x-default" href={`${siteUrl}${alternateUrls.es}`} />
		
		<!-- üè∑Ô∏è Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content={t('meta.keywords')} />
		
		<!-- üìä Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Pixel Living" />
		<meta property="og:url" content={canonicalUrl} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={`${siteUrl}${ogImage}`} />
		<meta property="og:image:alt" content={currentLang === 'es' ? "Pixel Living - Coliving en Bogot√°" : "Pixel Living - Coliving in Bogot√°"} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:locale" content={currentLang === 'es' ? 'es_CO' : 'en_US'} />
		
		<!-- üê¶ Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@pixelliving" />
		<meta name="twitter:creator" content="@pixelliving" />
		<meta name="twitter:url" content={canonicalUrl} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={`${siteUrl}${ogImage}`} />
		<meta name="twitter:image:alt" content={currentLang === 'es' ? "Pixel Living - Coliving en Bogot√°" : "Pixel Living - Coliving in Bogot√°"} />
		
		<!-- üìç Geo tags para ubicaci√≥n -->
		<meta name="geo.region" content="CO-DC" />
		<meta name="geo.placename" content="Bogot√°" />
		<meta name="geo.position" content="4.7110;-74.0721" />
		<meta name="ICBM" content="4.7110, -74.0721" />
		
		<!-- ‚ö° PRELOAD RECURSOS CR√çTICOS -->
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'" />
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Cal+Sans:wght@400;500;600&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'" />
		
		<!-- NOSCRIPT FALLBACK para fuentes -->
		<noscript>
			<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
			<link href="https://fonts.googleapis.com/css2?family=Cal+Sans:wght@400;500;600&display=swap" rel="stylesheet" />
		</noscript>
		
		<!-- üìä Structured Data JSON-LD -->
		<script type="application/ld+json" set:html={JSON.stringify(finalStructuredData)} />
		
		<!-- üéØ CRITICAL CSS INLINE -->
		<style>
			/* Critical CSS para evitar FOUC */
			html { 
				scroll-behavior: smooth; 
				font-display: swap; 
			}
			
			body { 
				font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				margin: 0;
				padding: 0;
				background: white;
				color: #1f2937;
				line-height: 1.6;
			}
			
			/* Header critical styles */
			header {
				position: fixed;
				top: 0;
				width: 100%;
				z-index: 50;
				background: rgba(255, 255, 255, 0.95);
				backdrop-filter: blur(10px);
			}
			
			/* ‚ôø Skip links para accesibilidad */
			.skip-links { 
				position: fixed; 
				top: 0; 
				left: 0; 
				z-index: 9999; 
			}
			
			.skip-link {
				position: absolute;
				top: -40px;
				left: 6px;
				background: #000;
				color: #fff;
				padding: 8px 12px;
				text-decoration: none;
				border-radius: 0 0 4px 0;
				transform: translateY(-100%);
				transition: transform 0.3s ease;
				font-size: 14px;
				font-weight: 500;
			}
			
			.skip-link:focus {
				transform: translateY(0);
				outline: 2px solid #ffd700;
				outline-offset: 2px;
			}
			
			/* Prevent FOUC */
			.main-content { 
				min-height: 50vh; 
			}
			
			/* Optimizaci√≥n de im√°genes */
			img { 
				height: auto; 
				max-width: 100%; 
			}
			
			/* üåç Language detection loading */
			.lang-detection-overlay {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: rgba(0, 64, 153, 0.95);
				display: flex;
				align-items: center;
				justify-content: center;
				z-index: 10000;
				color: white;
				font-family: 'Poppins', sans-serif;
			}
			
			.lang-detection-hidden {
				display: none !important;
			}
		</style>
	</head>
	
	<body>
		<!-- üìä Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KMNCWPVB"
		height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
		
		<!-- üåç Loading overlay para detecci√≥n de idioma -->
		<div id="lang-detection-overlay" class="lang-detection-overlay lang-detection-hidden">
			<div class="text-center">
				<div class="mb-4">
					<div class="animate-spin rounded-full h-12 w-12 border-b-2 border-white mx-auto"></div>
				</div>
				<p class="text-lg">Detectando idioma...</p>
				<p class="text-sm opacity-75">Detecting language...</p>
			</div>
		</div>
		
		<!-- ‚ôø Skip links para accesibilidad -->
		<div class="skip-links" role="navigation" aria-label={currentLang === 'es' ? 'Enlaces de acceso r√°pido' : 'Skip navigation links'}>
			<a href="#main-content" class="skip-link">
				{currentLang === 'es' ? 'Saltar al contenido principal' : 'Skip to main content'}
			</a>
			<a href="#navigation" class="skip-link">
				{currentLang === 'es' ? 'Saltar al men√∫ de navegaci√≥n' : 'Skip to navigation'}
			</a>
			<a href="#espacios" class="skip-link">
				{currentLang === 'es' ? 'Saltar a apartaestudios' : 'Skip to studios'}
			</a>
			<a href="#reservas" class="skip-link">
				{currentLang === 'es' ? 'Saltar al formulario de reservas' : 'Skip to booking form'}
			</a>
		</div>
		
		<!-- üéØ Header -->
		<Header />
		
		<!-- üìÑ Main content wrapper -->
		<main id="main-content" class="main-content" role="main">
			<slot />
		</main>
		
		<!-- ü¶∂ Footer -->
		<Footer />
		
		<!-- üì¢ Live region para anuncios de screen reader -->
		<div id="live-region" aria-live="polite" aria-atomic="true" class="sr-only"></div>
		
		<!-- üöÄ INICIALIZACI√ìN CON TRACKING DE FORMULARIOS -->
		<script is:inline>
			// Configuraci√≥n global
			window.PIXEL_CONFIG = {
				currentLang: document.documentElement.lang || 'es',
				isFirstVisit: !localStorage.getItem('pixel_language_preference'),
				debug: false
			};
			
			// üìä PIXEL TRACK - FUNCIONES PARA FORMULARIOS
			window.pixelTrack = {
				// Tracking de inicio de formulario
				formStart: function(formType) {
					console.log('üìù Form Start:', formType);
					if (typeof gtag === 'function') {
						gtag('event', 'begin_checkout', {
							currency: 'COP',
							value: 2650000,
							form_type: formType,
							event_category: 'form',
							event_label: formType + '_start'
						});
					}
				},
				
				// Tracking de formulario completado
				formComplete: function(formType) {
					console.log('‚úÖ Form Complete:', formType);
					if (typeof gtag === 'function') {
						gtag('event', 'purchase', {
							transaction_id: 'pixel_' + Date.now(),
							currency: 'COP',
							value: 2650000,
							form_type: formType,
							event_category: 'form',
							event_label: formType + '_complete'
						});
					}
				},
				
				// Tracking de contacto (WhatsApp, tel√©fono)
				contact: function(method) {
					console.log('üìû Contact:', method);
					if (typeof gtag === 'function') {
						gtag('event', 'contact', {
							contact_method: method,
							currency: 'COP',
							value: 1300000,
							event_category: 'contact',
							event_label: method
						});
					}
				},
				
				// Tracking de vista de estudio
				studioView: function(studioName) {
					console.log('üè† Studio View:', studioName);
					if (typeof gtag === 'function') {
						gtag('event', 'view_item', {
							currency: 'COP',
							value: 2650000,
							items: [{
								item_id: studioName.toLowerCase(),
								item_name: studioName,
								item_category: 'coliving',
								price: 2650000,
								quantity: 1
							}],
							event_category: 'studio',
							event_label: studioName
						});
					}
				}
			};
			
			console.log('üåç Pixel Living I18N inicializado:', window.PIXEL_CONFIG);
			console.log('üìä pixelTrack functions disponibles:', Object.keys(window.pixelTrack));
			
			// Inicializaci√≥n con error handling robusto
			document.addEventListener('DOMContentLoaded', () => {
				const initStart = performance.now();
				
				try {
					console.log('‚úÖ Pixel Living: Iniciando sistema...');
					
					// Verificar encoding UTF-8
					const testString = 'Bogot√° - Dise√±o - Informaci√≥n';
					console.log('üî§ Test UTF-8:', testString);
					
					// Verificar elementos b√°sicos
					const forms = document.querySelectorAll('form');
					const images = document.querySelectorAll('img');
					const buttons = document.querySelectorAll('button');
					
					console.log('üìä Elementos encontrados:', {
						formularios: forms.length,
						im√°genes: images.length,
						botones: buttons.length,
						idioma: window.PIXEL_CONFIG.currentLang
					});
					
					// üîó AUTO-TRACKING DE ENLACES
					document.addEventListener('click', function(e) {
						const link = e.target.closest('a');
						if (link && link.href) {
							// WhatsApp links
							if (link.href.includes('wa.me') || link.href.includes('whatsapp')) {
								console.log('üì± Auto-tracking WhatsApp click');
								if (window.pixelTrack) window.pixelTrack.contact('whatsapp');
							}
							// Phone links  
							else if (link.href.includes('tel:')) {
								console.log('‚òéÔ∏è Auto-tracking Phone click');
								if (window.pixelTrack) window.pixelTrack.contact('phone');
							}
						}
					});
					
					// üìù AUTO-TRACKING DE FORMULARIOS
					forms.forEach(form => {
						// Detectar tipo de formulario
						let formType = 'general';
						if (form.id === 'reservaForm' || form.id === 'reservas-form') {
							formType = 'reservas';
						} else if (form.id === 'estudioReservaForm') {
							formType = 'estudio';
						} else if (form.id === 'contactForm') {
							formType = 'contacto';
						}
						
						// Solo agregar listener si no existe ya
						if (!form.hasAttribute('data-tracking-added')) {
							form.addEventListener('submit', function(e) {
								console.log('üìù Auto-tracking form submit:', formType);
								if (window.pixelTrack) window.pixelTrack.formStart(formType);
							});
							form.setAttribute('data-tracking-added', 'true');
						}
					});
					
					// Ocultar overlay de detecci√≥n si existe
					const overlay = document.getElementById('lang-detection-overlay');
					if (overlay) {
						overlay.classList.add('lang-detection-hidden');
					}
					
					const initTime = Math.round(performance.now() - initStart);
					console.log(`‚úÖ Pixel Living: Sistema inicializado en ${initTime}ms`);
					console.log('üìä GTM + GA4 + Tracking inicializado correctamente');
					
				} catch (error) {
					console.error('‚ùå Error en inicializaci√≥n:', error);
				}
			});
		</script>
	</body>
</html>