// src/layouts/Layout.astro - VERSI√ìN OPTIMIZADA CON TODAS LAS CORRECCIONES

import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

export interface Props {
	title: string;
	description?: string;
	ogImage?: string;
	canonical?: string;
	noindex?: boolean;
