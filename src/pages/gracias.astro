---
// src/pages/gracias.astro
import Layout from '../layouts/Layout.astro';

// IMPORTAR I18N
import { getLanguageFromUrl, t, setCurrentLanguage, tArray } from '../i18n/utils/translator';

// Detectar idioma actual
const currentLang = getLanguageFromUrl(Astro.url.pathname);
setCurrentLanguage(currentLang);

// Configurar meta tags
const metaTitle = t('gracias.meta.title');
const metaDescription = t('gracias.meta.description');
const baseUrl = currentLang === 'en' ? '/en' : '';
---

<Layout 
  title={metaTitle}
  description={metaDescription}
  canonical={`https://pixelliving.co${baseUrl}/gracias`}
>
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-16 bg-gradient-to-br from-green-50 to-blue-50">
      <div class="container text-center">
        <div class="max-w-4xl mx-auto">
          <!-- Icono de Ã©xito -->
          <div class="mb-8">
            <div class="w-20 h-20 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-10 h-10 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
          
          <h1 class="text-4xl md:text-6xl font-bold mb-6 cal-sans text-gray-900">
            {t('gracias.hero.titulo')}
          </h1>
          
          <h2 class="text-xl md:text-2xl text-green-600 font-semibold mb-6">
            {t('gracias.hero.subtitulo')}
          </h2>
          
          <p class="text-lg text-gray-700 max-w-2xl mx-auto leading-relaxed">
            {t('gracias.hero.mensaje')}
          </p>
        </div>
      </div>
    </section>

    <!-- Pasos siguiente -->
    <section class="py-16 bg-white">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 cal-sans">
            {t('gracias.confirmacion.titulo')}
          </h2>
          
          <div class="grid md:grid-cols-3 gap-8">
{tArray('gracias.confirmacion.pasos').map((paso: any, index: number) => (
              <div class="text-center">
                <div class="w-16 h-16 bg-pixel-blue rounded-full flex items-center justify-center mx-auto mb-6">
                  <span class="text-2xl font-bold text-white">{paso.numero}</span>
                </div>
                
                <h3 class="text-xl font-semibold mb-4 text-gray-900">
                  {paso.titulo}
                </h3>
                
                <p class="text-gray-600 leading-relaxed">
                  {paso.descripcion}
                </p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Contacto urgente -->
    <section class="py-16 bg-gray-50">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-6 cal-sans">
            {t('gracias.contacto_urgente.titulo')}
          </h2>
          
          <p class="text-lg text-gray-700 mb-8">
            {t('gracias.contacto_urgente.descripcion')}
          </p>
          
          <div class="grid md:grid-cols-2 gap-6">
            <!-- WhatsApp -->
            <a 
              href="https://wa.me/573195895858" 
              target="_blank"
              class="bg-green-500 hover:bg-green-600 text-white p-6 rounded-lg transition-colors group"
            >
              <div class="flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-8 h-8">
                  <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-2.462-.96-4.779-2.705-6.526-1.746-1.746-4.065-2.711-6.526-2.713-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.092-.634zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                </svg>
              </div>
              <h3 class="font-semibold mb-2">{t('gracias.contacto_urgente.whatsapp')}</h3>
              <p class="text-green-100">{t('gracias.contacto_urgente.telefono')}</p>
            </a>

            <!-- Email -->
            <a 
              href="mailto:info@pixelliving.co" 
              class="bg-blue-500 hover:bg-blue-600 text-white p-6 rounded-lg transition-colors group"
            >
              <div class="flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </div>
              <h3 class="font-semibold mb-2">Email</h3>
              <p class="text-blue-100">{t('gracias.contacto_urgente.email')}</p>
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 bg-white">
  <div class="container text-center">
    <div class="max-w-2xl mx-auto">
      <div class="space-y-4">
        <a 
          href={`${baseUrl}/#espacios`} 
          class="w-full bg-pixel-blue hover:bg-blue-600 text-white py-4 px-8 rounded-xl font-semibold transition-all duration-300 hover:shadow-lg hover:-translate-y-1 flex items-center justify-center group"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
          </svg>
          {t('gracias.cta.ver_espacios')}
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-2 transform transition-transform group-hover:translate-x-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
        
        <!-- Botones secundarios -->
        <div class="grid grid-cols-2 gap-3">
          <a 
            href={baseUrl || '/'} 
            class="bg-gray-50 hover:bg-gray-100 text-gray-700 py-3 px-6 rounded-lg font-medium transition-all duration-300 hover:shadow-md border border-gray-200 flex items-center justify-center"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 mr-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
            </svg>
            {t('gracias.cta.volver_inicio')}
          </a>
          
          <a 
            href="https://instagram.com/pixelliving.co" 
            target="_blank"
            class="bg-gradient-to-r from-pink-50 to-purple-50 hover:from-pink-100 hover:to-purple-100 text-gray-700 py-3 px-6 rounded-lg font-medium transition-all duration-300 hover:shadow-md border border-pink-200 flex items-center justify-center"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-4 h-4 mr-2 text-pink-500" viewBox="0 0 16 16">
              <path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z"/>
            </svg>
            {t('gracias.cta.seguir_redes')}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
  </main>
</Layout>

<style>
  /* Animaciones sutiles */
  .animate-bounce-subtle {
    animation: bounce-subtle 2s infinite;
  }
  
  @keyframes bounce-subtle {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }
</style>