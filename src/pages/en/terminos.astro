---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

// IMPORTAR I18N
import { getLanguageFromUrl, t, setCurrentLanguage, tArray } from '../../i18n/utils/translator';

// Detectar idioma actual
const currentLang = getLanguageFromUrl(Astro.url.pathname);
setCurrentLanguage(currentLang);

// Configurar meta tags
const metaTitle = t('terminos.meta.title');
const metaDescription = t('terminos.meta.description');
---

<Layout title={metaTitle} description={metaDescription}>
  <Header />
  
  <main class="pt-32 pb-16">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        
        <!-- Header -->
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 cal-sans">
  {t('terminos.hero.titulo')} <span class="text-pixel-brown">{t('terminos.hero.titulo_highlight')}</span>
</h1>
        </div>

        <!-- Contenido de tÃ©rminos y condiciones -->
        <div class="prose prose-lg max-w-none">
          
          <div class="bg-white border border-gray-200 rounded-lg p-8">
            
            <h2 class="text-2xl font-bold text-gray-900 mb-4">{t('terminos.encabezado.titulo')}</h2>
            
            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.informacion_general.titulo')}</h3>
            <p class="text-gray-700 mb-6">
              {t('terminos.informacion_general.contenido')}
            </p>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.objeto.titulo')}</h3>
            <div class="space-y-3 mb-6">
              {tArray('terminos.secciones.objeto.contenido').map((item: string) => (
                <p class="text-gray-700">{item}</p>
              ))}
            </div>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.reserva.titulo')}</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
              {tArray('terminos.secciones.reserva.contenido').map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.estancia.titulo')}</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
              {tArray('terminos.secciones.estancia.contenido').map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.zonas_comunes.titulo')}</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
              {tArray('terminos.secciones.zonas_comunes.contenido').map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.prohibiciones.titulo')}</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
              {tArray('terminos.secciones.prohibiciones.contenido').map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.pago.titulo')}</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
              {tArray('terminos.secciones.pago.contenido').map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.sanciones.titulo')}</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
              {tArray('terminos.secciones.sanciones.contenido').map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.proteccion_datos.titulo')}</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
              {tArray('terminos.secciones.proteccion_datos.contenido').map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.cambios.titulo')}</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
              {tArray('terminos.secciones.cambios.contenido').map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.jurisdiccion.titulo')}</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
              {tArray('terminos.secciones.jurisdiccion.contenido').map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>

            <h3 class="text-xl font-bold text-gray-900 mb-4">{t('terminos.secciones.aceptacion.titulo')}</h3>
            <p class="text-gray-700 mb-6">
              {t('terminos.secciones.aceptacion.contenido')}
            </p>

            <div class="bg-pixel-brown/5 p-6 rounded-lg">
              <h4 class="text-lg font-bold text-gray-900 mb-3">{t('terminos.contacto.titulo')}</h4>
              <ul class="list-disc list-inside space-y-1 text-gray-700">
                <li><strong>{t('terminos.contacto.correo_label')}</strong> {t('terminos.contacto.correo')}</li>
                <li><strong>{t('terminos.contacto.whatsapp_label')}</strong> {t('terminos.contacto.whatsapp')}</li>
                <li><strong>{t('terminos.contacto.direccion_label')}</strong> {t('terminos.contacto.direccion')}</li>
              </ul>
              <p class="text-gray-700 mt-4 font-semibold">{t('terminos.contacto.empresa')}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  
</Layout>