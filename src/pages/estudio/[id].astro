// Funciones de validaci√≥n simples pero efectivas
function validarNombre(valor) {
  const nombre = valor.trim();
  if (nombre.length < 2) return 'El nombre debe tener al menos 2 caracteres';
  if (nombre.length > 50) return 'El nombre no puede exceder 50 caracteres';
  if (!/^[a-zA-Z√°√©√≠√≥√∫√Å√â√ç√ì√ö√±√ë\s]+$/.test(nombre)) return 'Solo se permiten letras y espacios';
  return null;
}

function validarEmail(valor) {
  const email = valor.trim();
  if (!email) return 'El email es obligatorio';
  if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) return 'Ingresa un email v√°lido (ej: juan@gmail.com)';
  return null;
}

function validarTelefono(valor) {
  const telefono = valor.replace(/\s/g, '');
  if (!telefono) return 'El tel√©fono es obligatorio';
  if (!/^[0-9]{10}$/.test(telefono)) return 'Ingresa un tel√©fono v√°lido de 10 d√≠gitos (ej: 3001234567)';
  return null;
}

function validarExpectativas(valor) {
  const expectativas = valor.trim();
  if (!expectativas) return 'Cu√©ntanos qu√© buscas en Pixel';
  if (expectativas.length < 10) return 'Describe tu inter√©s con al menos 10 caracteres';
  if (expectativas.length > 500) return 'M√°ximo 500 caracteres';
